@model dynamic

@{
    ViewBag.Title = "Javascript Prototyping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form Validation</h2>
<form class="validate-form">
    <div class="form-group">
        <label for="exampleInputEmail1">Full Name</label>
        <input type="text" class="form-control" id="exampleInputFullName" placeholder="Enter your full name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="exampleInputFile">File input</label>
        <input type="file" id="exampleInputFile" />
        <p class="help-block">Example block-level help text here.</p>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox">
            Check me out
        </label>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<button type="button" id="showElement" class="btn btn-default">Show</button>
<button type="button" id="hideElement" class="btn btn-default">Hide</button>
<button type="button" id="toggleElement" class="btn btn-default">Toggle</button>

@section Scripts
{
    <script type="text/javascript" src="/Scripts/Proto/Home.js" ></script>
}